root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
insert_final_newline = true
charset = utf-8
end_of_line = lf
indent_size = 2

[*.{css, scss}]
indent_size = 4

[*.{json, yml}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
